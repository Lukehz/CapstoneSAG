<!-- Contenedor del mapa -->
 
<div id="map" style="width: 100%; height: 100vh;"></div>

<!-- Botón de Filtro y Buscador -->
<div class="absolute top-4 right-4 flex flex-row space-x-2 z-10">
    <!-- Contenedor del buscador -->
    <div id="map-search" class="flex-1"></div>
    
    <!-- Botón Filtro -->
    <button 
      id="filter-button" 
      class="py-2 px-4 bg-green-500 hover:bg-green-600 text-white rounded-lg shadow-lg transition-colors"
    >
      Filtro
    </button>

    
  </div>

  
  <!-- Panel de Filtros -->
  <div id="filter-panel" class="absolute top-20 right-4 bg-white p-4 rounded-lg shadow-lg w-72 z-10 hidden">
    <h2 class="text-lg font-bold mb-4">Filtros</h2>
    <div id="controls" class="space-y-2">
        <label>
          <input type="checkbox" id="quarantine-toggle"> Mostrar trazado de cuarentena
        </label>
        <label>
          <input type="checkbox" id="quarantine-circle-toggle"> Mostrar Círculo de Cuarentena
        </label>       
        <label>
          <input type="checkbox" id="parcela-toggle"> Mostrar parcelas
        </label>
    </div>

    <!-- Dropdown Parcelas -->
    <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700">Parcelas</label>
        <select id="parcelas-dropdown" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
        <option value="">Seleccione una parcela</option>
        </select>
    </div>

    <!-- Dropdown Cuarentenas -->
    <div class="mb-4">
        <label class="block text-sm font-medium text-gray-700">Cuarentenas</label>
        <select id="cuarentenas-dropdown" class="mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
        <option value="">Seleccione una cuarentena</option>
        </select>
    </div>
  </div>
  

<!-- Panel de Cuarentena -->
<div id="cuarentena" class="absolute top-4 left-4 bg-white p-4 rounded-lg shadow-lg w-72 z-10">
  <div id="cuarentena">
    <h2>Crear Cuarentena</h2>
    <select id="quarantine-type">
      <option value="seleccionar">Seleccionar modo dibujo</option>
      <option value="trazado">Por Trazado</option>
      <option value="radio">Por Radio</option>
    </select>
    <div class="form-group">
      <label for="sector-select">Sector:</label>
      <select id="SelectComuna" class="form-control" required>
        <option value="">Seleccionar</option>
      </select>
    </div>
    <button id="cancel-quarantine" class="btn-quarantine">Cancelar cuarentena</button>
    <textarea id="quarantine-comment" placeholder="Escriba un comentario"></textarea>
    <input type="number" id="quarantine-radius" placeholder="Radio en metros" min="0" style="display: none;">
    <button id="save-quarantine">Guardar cuarentena</button>
  </div>
</div>


<!-- Botón Centrar Mapa -->
<button 
  id="center-map" 
  class="absolute top-20 right-80 z-10 py-2 px-4 bg-blue-500 hover:bg-blue-600 text-white rounded-lg shadow-lg transition-colors"
>
  Centrar Mapa
</button>
</div>

<!-- Scripts del mapa -->
<script src="https://api.mapbox.com/mapbox-gl-js/v2.12.0/mapbox-gl.js"></script>
<script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.2/mapbox-gl-geocoder.min.js"></script>
<script type="module" src="js/map.js"></script>
<script type="module" src="/js/quarantine.js"></script>
<script type="module" src="js/parcelas.js"></script>
<script type="module" src="js/api.js"></script>
<script type="module" src="js/sidebar.js"></script>
<script type="module" src="js/filter.js"></script>