<!-- Contenedor principal que ocupa el espacio al lado del sidebar -->
<div class="ml-[15%] w-full h-screen bg-white overflow-y-auto">
    <!-- Contenedor para centrar el contenido -->
    <div class="flex flex-col min-h-full">
        <!-- Contenido principal -->
        <div class="flex-1 flex flex-col px-6 overflow-y-auto">
            <!-- Header del CRUD -->
            <div class="py-4 border-b border-gray-200 sticky top-0 bg-white z-10">
                <h1 id="crud-title" class="text-xl font-semibold text-black"><%= title %></h1>
            </div>
            <div class="flex justify-end mb-4 sticky top-16 bg-white z-10 py-2">
                <button id="addButton" class="bg-indigo-500 text-white text-xl font-bold rounded-full w-8 h-8 flex items-center justify-center mr-2" type="button"></button>
                <button id="filterButton" class="text-black font-semibold hover:text-black py-2 px-4 border border-blue-500 hover:border-black rounded"> Aplicar filtro </button>
            </div>
            <!-- Contenedor del CRUD -->
            <div class="py-4 flex-1 overflow-y-auto">
                <!-- Filtros y Botones -->
                
                <div id="filters" class="mb-4"></div>

                <!-- Tabla de contenido -->
                <div class="overflow-x-auto">
                    <table id="itemsTable" class="w-full border-collapse">
                        <thead>
                            <tr id="tableHeaders"></tr>
                        </thead>
                        <tbody id="itemList"></tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <footer class="w-full bg-blueGray-50 py-4 mt-auto">
            <div class="container mx-auto px-6">
                <div class="text-center">
                    <p class="text-sm text-blueGray-500 font-semibold">
                        Gestión de Parcelaciones © 2024
                    </p>
                </div>
            </div>
        </footer>
    </div>
</div>

<!-- Modal para mostrar la imagen -->
<div id="imageModal" class="modal fixed w-full h-full top-0 left-0 flex items-center justify-center hidden">
    <div class="modal-overlay absolute w-full h-full bg-black opacity-50"></div>
    <div class="modal-container bg-white w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">
        <div class="modal-content py-4 text-left px-6">
            <div class="flex justify-between items-center pb-3">
                <button class="modal-close cursor-pointer z-50" onclick="closeModalImg()">
                    <span class="text-2xl">&times;</span>
                </button>
            </div>
            <img id="modalImage" class="w-full" style="max-width: 100%; height: auto;" alt="Imagen de la parcelación" />
        </div>
    </div>
</div>

<!-- Modal para agregar/actualizar parcelación -->
<div id="myModal" class="modal fixed w-full h-full top-0 left-0 flex items-center justify-center hidden">
    <div class="modal-overlay absolute w-full h-full" style="background-color: rgba(0, 0, 0, 0.5);"></div>
    <div class="modal-container bg-white w-11/12 md:max-w-md mx-auto rounded shadow-lg z-50 overflow-y-auto">
        <div class="modal-content py-4 text-left px-6">
            <div class="flex justify-between items-center pb-3">
                <p id="modalTitle" class="text-2xl font-bold">Agregar Item</p>
                <button class="modal-close cursor-pointer z-50" onclick="closeModal()">
                    <span class="text-2xl">&times;</span>
                </button>
            </div>
            <form id="itemForm">
                <input type="hidden" id="itemId">
                <div id="formFields">
                    <!-- Los campos del formulario se llenarán aquí dinámicamente -->
                </div>
                <button type="submit" id="submitButton" class="bg-indigo-500 text-white text-xs font-bold uppercase px-3 py-1 rounded outline-none focus:outline-none mr-1 mb-1 mt-4 w-full hover:bg-indigo-600 transition-colors duration-200">Agregar Item</button>
            </form>
        </div>
    </div>
</div>

<!-- Scripts -->
<script src="/js/script.js"></script>